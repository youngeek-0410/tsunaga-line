{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "ignore": ["src/api/*", "src/fetcher/openapi-generated.d.ts"],
    "formatWithErrors": false,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingComma": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "lineWidth": 100,
      "quoteProperties": "asNeeded"
    }
  }
}
